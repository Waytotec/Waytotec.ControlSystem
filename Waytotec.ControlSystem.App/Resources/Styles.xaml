<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:Waytotec.ControlSystem.App.Converters"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">

    <Color x:Key="SnowflakeGradientTop">#171C26</Color>
    <Color x:Key="SnowflakeGradientBottom">#00000000</Color>
    <Color x:Key="TextPlaceholderColor">#87FFFFFF</Color>

    <SolidColorBrush x:Key="TextControlPlaceholderForeground" Color="{StaticResource TextPlaceholderColor}" />

    <Style x:Key="WttTextStyle1" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#2630F2" />
        <Setter Property="FontSize" Value="120" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontFamily" Value="Times New Roman" />
    </Style>
    <Style x:Key="WttTextStyle2" TargetType="TextBlock">
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontSize" Value="150" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontFamily" Value="Times New Roman" />
    </Style>
    <Style x:Key="WttTextSize14" TargetType="TextBlock">
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontFamily" Value="맑은고딕" />
    </Style>

    <Style x:Key="ProgressStyle" TargetType="ProgressBar">
        <Style.Resources>
            <conv:CustomConverters x:Key="sttc" />
        </Style.Resources>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ProgressBar">
                    <Border
                        Padding="0"
                        Background="#FF0C0B0B"
                        BorderBrush="#D9DCE1"
                        BorderThickness="0"
                        ClipToBounds="True"
                        CornerRadius="0">
                        <Grid x:Name="PART_Track" Margin="{TemplateBinding Height, Converter={StaticResource sttc}}">
                            <Rectangle
                                x:Name="PART_Indicator"
                                HorizontalAlignment="Left"
                                Fill="#FF2BA9FF"
                                RenderTransformOrigin="0,0">
                                <Rectangle.RenderTransform>
                                    <TransformGroup>
                                        <SkewTransform AngleX="-45" />
                                    </TransformGroup>
                                </Rectangle.RenderTransform>
                            </Rectangle>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  NavigationViewItemSeparator 커스텀 스타일  -->
    <Style TargetType="{x:Type ui:NavigationViewItemSeparator}">
        <Setter Property="Height" Value="1" />
        <Setter Property="Margin" Value="16,8,16,8" />
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="Focusable" Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ui:NavigationViewItemSeparator}">
                    <Grid>
                        <Rectangle Height="{TemplateBinding Height}" HorizontalAlignment="Stretch">
                            <Rectangle.Fill>
                                <SolidColorBrush Opacity="0.2" Color="{DynamicResource ControlStrokeColorDefault}" />
                            </Rectangle.Fill>
                            <Rectangle.OpacityMask>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Offset="0" Color="Transparent" />
                                    <GradientStop Offset="0.08" Color="#40FFFFFF" />
                                    <GradientStop Offset="0.92" Color="#40FFFFFF" />
                                    <GradientStop Offset="1" Color="Transparent" />
                                </LinearGradientBrush>
                            </Rectangle.OpacityMask>
                        </Rectangle>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
