<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:Waytotec.ControlSystem.App.Converters"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">

    <Color x:Key="SnowflakeGradientTop">#171C26</Color>
    <Color x:Key="SnowflakeGradientBottom">#00000000</Color>
    <Color x:Key="TextPlaceholderColor">#87FFFFFF</Color>

    <SolidColorBrush x:Key="TextControlPlaceholderForeground" Color="{StaticResource TextPlaceholderColor}" />

    <Style x:Key="WttTextStyle1" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#2630F2" />
        <Setter Property="FontSize" Value="120" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontFamily" Value="Times New Roman" />
    </Style>
    <Style x:Key="WttTextStyle2" TargetType="TextBlock">
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontSize" Value="150" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontFamily" Value="Times New Roman" />
    </Style>
    <Style x:Key="WttTextSize14" TargetType="TextBlock">
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontFamily" Value="맑은고딕" />
    </Style>

    <Style x:Key="ProgressStyle" TargetType="ProgressBar">
        <Style.Resources>
            <conv:CustomConverters x:Key="sttc" />
        </Style.Resources>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ProgressBar">
                    <Border
                        Padding="0"
                        Background="#FF0C0B0B"
                        BorderBrush="#D9DCE1"
                        BorderThickness="0"
                        ClipToBounds="True"
                        CornerRadius="0">
                        <Grid x:Name="PART_Track" Margin="{TemplateBinding Height, Converter={StaticResource sttc}}">
                            <Rectangle
                                x:Name="PART_Indicator"
                                HorizontalAlignment="Left"
                                Fill="#FF2BA9FF"
                                RenderTransformOrigin="0,0">
                                <Rectangle.RenderTransform>
                                    <TransformGroup>
                                        <SkewTransform AngleX="-45" />
                                    </TransformGroup>
                                </Rectangle.RenderTransform>
                            </Rectangle>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  ui:NavigationViewItemSeparator  -->

    <!--  NavigationViewItemSeparator 커스텀 스타일  -->
    <Style TargetType="{x:Type ui:NavigationViewItemSeparator}">
        <Setter Property="Height" Value="1" />
        <Setter Property="Margin" Value="0,8,0,8" />
        <Setter Property="Focusable" Value="False" />
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ui:NavigationViewItemSeparator}">
                    <Grid>
                        <!--  부드러운 그라데이션 배경  -->
                        <Border
                            Height="32"
                            Margin="0,-16,0,-16"
                            VerticalAlignment="Center">
                            <Border.Background>
                                <RadialGradientBrush Center="0.5,0.5" RadiusX="1" RadiusY="0.2">
                                    <!--  DynamicResource로 테마에 따라 색상 변경  -->
                                    <GradientStop Offset="0" Color="{DynamicResource ControlStrokeColorDefault}" />
                                    <GradientStop Offset="1" Color="Transparent" />
                                </RadialGradientBrush>
                            </Border.Background>
                            <Border.Opacity>
                                <!--  테마에 따라 투명도 조정  -->
                                <Binding Path="ActualTheme" RelativeSource="{RelativeSource AncestorType=Window}">
                                    <Binding.Converter>
                                        <conv:ThemeToOpacityConverter />
                                    </Binding.Converter>
                                </Binding>
                            </Border.Opacity>
                            <Border.OpacityMask>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Offset="0" Color="Transparent" />
                                    <GradientStop Offset="0.1" Color="Black" />
                                    <GradientStop Offset="0.9" Color="Black" />
                                    <GradientStop Offset="1" Color="Transparent" />
                                </LinearGradientBrush>
                            </Border.OpacityMask>
                        </Border>

                        <!--  얇은 중앙선  -->
                        <Rectangle
                            Height="1"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center">
                            <Rectangle.Fill>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Offset="0" Color="Transparent" />
                                    <GradientStop Offset="0.1" Color="{DynamicResource ControlStrokeColorDefault}" />
                                    <GradientStop Offset="0.9" Color="{DynamicResource ControlStrokeColorDefault}" />
                                    <GradientStop Offset="1" Color="Transparent" />
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                            <Rectangle.Opacity>
                                <Binding Path="ActualTheme" RelativeSource="{RelativeSource AncestorType=Window}">
                                    <Binding.Converter>
                                        <conv:ThemeToLineOpacityConverter />
                                    </Binding.Converter>
                                </Binding>
                            </Rectangle.Opacity>
                        </Rectangle>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  일반 Separator 커스텀 스타일  -->
    <Style x:Key="GradientSeparatorStyle" TargetType="{x:Type Separator}">
        <Setter Property="Height" Value="1" />
        <Setter Property="Margin" Value="0,8,0,8" />
        <Setter Property="Focusable" Value="False" />
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Separator}">
                    <Grid>
                        <!--  부드러운 그라데이션 배경  -->
                        <Border
                        Height="32"
                        Margin="0,-16,0,-16"
                        VerticalAlignment="Center">
                            <Border.Background>
                                <RadialGradientBrush Center="0.5,0.5" RadiusX="1" RadiusY="0.2">
                                    <!--  DynamicResource로 테마에 따라 색상 변경  -->
                                    <GradientStop Offset="0" Color="{DynamicResource ControlStrokeColorDefault}" />
                                    <GradientStop Offset="1" Color="Transparent" />
                                </RadialGradientBrush>
                            </Border.Background>
                            <Border.Opacity>
                                <!--  테마에 따라 투명도 조정  -->
                                <Binding Path="ActualTheme" RelativeSource="{RelativeSource AncestorType=Window}">
                                    <Binding.Converter>
                                        <conv:ThemeToOpacityConverter />
                                    </Binding.Converter>
                                </Binding>
                            </Border.Opacity>
                            <Border.OpacityMask>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Offset="0" Color="Transparent" />
                                    <GradientStop Offset="0.1" Color="Black" />
                                    <GradientStop Offset="0.9" Color="Black" />
                                    <GradientStop Offset="1" Color="Transparent" />
                                </LinearGradientBrush>
                            </Border.OpacityMask>
                        </Border>
                        <!--  얇은 중앙선  -->
                        <Rectangle
                        Height="1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center">
                            <Rectangle.Fill>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Offset="0" Color="Transparent" />
                                    <GradientStop Offset="0.1" Color="{DynamicResource ControlStrokeColorDefault}" />
                                    <GradientStop Offset="0.9" Color="{DynamicResource ControlStrokeColorDefault}" />
                                    <GradientStop Offset="1" Color="Transparent" />
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                            <Rectangle.Opacity>
                                <Binding Path="ActualTheme" RelativeSource="{RelativeSource AncestorType=Window}">
                                    <Binding.Converter>
                                        <conv:ThemeToLineOpacityConverter />
                                    </Binding.Converter>
                                </Binding>
                            </Rectangle.Opacity>
                        </Rectangle>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  모든 Separator에 자동 적용하려면  -->
    <Style TargetType="{x:Type Separator}" BasedOn="{StaticResource GradientSeparatorStyle}" />
</ResourceDictionary>
