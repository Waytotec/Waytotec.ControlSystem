<Page
    x:Class="Waytotec.ControlSystem.App.Views.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Waytotec.ControlSystem.App.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Settings"
    d:DataContext="{d:DesignInstance local:SettingsPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel Margin="0,0,0,24">
        <ui:TextBlock
            Margin="0,0,0,8"
            FontTypography="BodyStrong"
            Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"
            Text="외관 및 동작" />

        <!--  Theme Settings  -->
        <ui:CardControl Margin="0,0,0,12" Icon="{ui:SymbolIcon Color24}">
            <ui:CardControl.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <ui:TextBlock
                        Grid.Row="0"
                        FontTypography="Body"
                        Text="앱 테마" />
                    <ui:TextBlock
                        Grid.Row="1"
                        Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"
                        Text="표시할 앱 테마를 선택하세요" />
                </Grid>
            </ui:CardControl.Header>
            <ComboBox
                x:Name="ThemeComboBox"
                MinWidth="200"
                SelectedIndex="{Binding ViewModel.ThemeSelectedIndex, Mode=TwoWay}">
                <ComboBoxItem Content="라이트" />
                <ComboBoxItem Content="다크" />
            </ComboBox>
        </ui:CardControl>

        <!--  Backdrop Settings  -->
        <ui:CardControl Margin="0,0,0,12" Icon="{ui:SymbolIcon Desktop24}">
            <ui:CardControl.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <ui:TextBlock
                        Grid.Row="0"
                        FontTypography="Body"
                        Text="창 배경 효과" />
                    <ui:TextBlock
                        Grid.Row="1"
                        Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"
                        Text="창 배경의 투명도 효과를 선택하세요" />
                </Grid>
            </ui:CardControl.Header>
            <ComboBox
                x:Name="BackdropComboBox"
                MinWidth="200"
                SelectedIndex="{Binding ViewModel.BackdropSelectedIndex, Mode=TwoWay}">
                <ComboBoxItem Content="기본" />
                <ComboBoxItem Content="마이카" />
                <ComboBoxItem Content="아크릴" />
                <ComboBoxItem Content="투명" />
            </ComboBox>
        </ui:CardControl>

        <!--  Language Settings  -->
        <ui:CardControl
            Margin="0,0,0,12"
            Icon="{ui:SymbolIcon Symbol=LocalLanguage24}"
            IsEnabled="False">
            <ui:CardControl.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <ui:TextBlock
                        Grid.Row="0"
                        FontTypography="Body"
                        Text="언어 설정" />
                    <ui:TextBlock
                        Grid.Row="1"
                        Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"
                        Text="표시할 언어를 선택하세요" />
                </Grid>
            </ui:CardControl.Header>
            <!--<ComboBox
                x:Name="LanguageComboBox"
                MinWidth="200"
                SelectedIndex="{Binding ViewModel.LanguageSelectedIndex, Mode=TwoWay}">
                <ComboBoxItem Content="한국어" />
                <ComboBoxItem Content="English" />
            </ComboBox>-->
            <ComboBox x:Name="LanguageComboBox" MinWidth="200">
                <ComboBoxItem Content="한국어" />
                <ComboBoxItem Content="English" />
            </ComboBox>
        </ui:CardControl>
    </StackPanel>
</Page>