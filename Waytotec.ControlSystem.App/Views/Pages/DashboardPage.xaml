<Page x:Class="Waytotec.ControlSystem.App.Views.Pages.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="clr-namespace:Waytotec.ControlSystem.App.Views.Controls"
      xmlns:converters="clr-namespace:Waytotec.ControlSystem.App.Converters"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Waytotec.ControlSystem.App.Views.Pages"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      Title="DashboardPage"
      d:DataContext="{d:DesignInstance local:DashboardPage,
                                       IsDesignTimeCreatable=False}"
      d:DesignHeight="450"
      d:DesignWidth="800"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"      
      mc:Ignorable="d">

    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:BoolToStringConverter x:Key="BoolToStringConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!-- 눈내리는 효과-->
        <Grid Grid.Row="0" Height="200" 
              ClipToBounds="True"
              Grid.ColumnSpan="2">
            <Grid>
                <Rectangle VerticalAlignment="Bottom" Height="200" RadiusX="8" RadiusY="8" Panel.ZIndex="0">
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="{DynamicResource SnowflakeGradientTop}" Offset="0"/>
                            <GradientStop Color="{DynamicResource SnowflakeGradientBottom}" Offset="1"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>

                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Panel.ZIndex="1">
                        <ui:SymbolIcon 
                            x:Name="MainSymbolIcon" 
                            FontSize="100"
                            Symbol="Symbols20"/>
                        <TextBlock 
                            x:Name="MainTitle"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"                        
                            FontSize="28"       
                            Text="MainPage"
                            FontWeight="Black"/>
                    </StackPanel>

                    <TextBlock  
                        Grid.Column="1"
                        HorizontalAlignment="Center"
                        Margin="20"
                        Foreground="{DynamicResource TextControlPlaceholderForeground}" 
                        FontSize="12" 
                        Panel.ZIndex="-1"
                        TextWrapping="Wrap">
                        WPF UI provides the Fluent experience in your known and loved WPF framework. Intuitive design, themes, navigation and new immersive controls. All natively and effortlessly. Library changes the base elements like Page, ToggleButton or List, and also includes additional controls like Navigation, NumberBox, Dialog or Snackbar.
                        <LineBreak />
                        <LineBreak />
                        Support the development of WPF UI and other innovative projects by becoming a sponsor on GitHub! Your monthly or one-time contributions help us continue to deliver high-quality, open-source solutions that empower developers worldwide.
                    </TextBlock>
                </Grid>

                <Canvas x:Name="MainCanvas" Panel.ZIndex="2"/>
            </Grid>
        </Grid>

        <!--  장비 리스트  -->
        <Grid Grid.Row="1" Grid.Column="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 스캔 상태 표시 -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="스캔 상태: " VerticalAlignment="Center"/>
                <TextBlock Text="{Binding ViewModel.ScanStatus}" 
                           VerticalAlignment="Center" 
                           FontWeight="Bold"
                           Foreground="Blue"/>
                <ProgressBar Width="100" Height="20" Margin="10,0,0,0"
                             IsIndeterminate="{Binding ViewModel.IsScanning}"
                             Visibility="{Binding ViewModel.IsScanning, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </StackPanel>

            <!-- 발견된 카메라 목록 -->
            <DataGrid Name="CameraGrid"
                      Grid.Row="1"
                      AutoGenerateColumns="False"
                      BorderBrush="Gray"
                      BorderThickness="1"
                      CanUserSortColumns="True"
                      IsReadOnly="True"
                      ItemsSource="{Binding ViewModel.Cameras}"
                      MouseDoubleClick="CameraGrid_MouseDoubleClick"
                      SelectionMode="Single"
                      SelectionUnit="FullRow">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Ip}"
                                        Header="IP 주소" 
                                        Width="120"/>
                    <DataGridTextColumn Binding="{Binding Mac}"
                                        Header="MAC 주소" 
                                        Width="140"/>
                    <DataGridTextColumn Binding="{Binding Type}"
                                        Header="타입" 
                                        Width="50"/>
                    <DataGridTextColumn Binding="{Binding Version}"
                                        Header="버전" 
                                        Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!--  영상 영역  -->
        <Border Grid.Row="1"
                Grid.Column="1"
                Margin="10"
                Background="Black"
                CornerRadius="4">
            <controls:RtspVideoViewer x:Name="RtspViewer"
                                      MouseDoubleClick="RtspViewer_MouseDoubleClick" />
        </Border>

        <!--  제어 버튼  -->
        <StackPanel Grid.Row="2"
                    Grid.Column="0"
                    Margin="10"
                    Orientation="Vertical">
            <WrapPanel Margin="0,0,0,10">
                <Button Width="100"
                        Margin="5"
                        Command="{Binding ViewModel.PingTestCommand}"
                        Content="Ping 테스트" />
                <Button Width="100"
                        Margin="5"
                        Content="공장초기화" />
                <Button Width="100"
                        Margin="5"
                        Content="엑셀변환" />
                <Button Width="120"
                        Margin="5"
                        Content="{Binding ViewModel.IsScanning, Converter={StaticResource BoolToStringConverter}, ConverterParameter='검색 중지:카메라 검색'}"
                        Command="{Binding ViewModel.ScanCommand}" />
                <Button Width="80"
                        Margin="5"
                        Content="테스트 추가"
                        Click="TestAddCamera_Click" />
            </WrapPanel>
            <WrapPanel>
                <Button Width="100"
                        Margin="5"
                        Content="장비명 정렬" />
                <Button Width="100"
                        Margin="5"
                        Content="MAC 정렬" />
                <Button Width="100"
                        Margin="5"
                        Content="포트설정" />
                <Button Width="100"
                        Margin="5"
                        Content="통신속도" />
            </WrapPanel>
        </StackPanel>

        <!--  LPR UTIL 메뉴  -->
        <GroupBox Grid.Row="2"
                  Grid.Column="1"
                  Margin="10"
                  Header="LPR UTIL 4.2 관련 메뉴창">
            <Grid>
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="16"
                           Foreground="DarkSlateGray"
                           Text="LPR 제어 및 설정 구성" />
            </Grid>
        </GroupBox>
    </Grid>
</Page>