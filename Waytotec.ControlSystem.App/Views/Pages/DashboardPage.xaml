<Page
    x:Class="Waytotec.ControlSystem.App.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Waytotec.ControlSystem.App.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="DashboardPage"
    d:DataContext="{d:DesignInstance local:DashboardPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!--  장비 리스트  -->
        <DataGrid
    Name="DeviceGrid"
    Grid.Row="0"
    Grid.Column="0"
    Margin="10"
    AutoGenerateColumns="False"
    CanUserSortColumns="True"
    IsReadOnly="True"
    ItemsSource="{Binding Devices}"
    MouseDoubleClick="DeviceGrid_MouseDoubleClick"
    SelectedItem="{Binding SelectedDevice, Mode=TwoWay}"
    SelectionMode="Single"
    SelectionUnit="FullRow">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding DeviceId}" Header="장비명" />
                <DataGridTextColumn Binding="{Binding IPString}" Header="IP" />
                <DataGridTextColumn Binding="{Binding MacAddressString}" Header="MAC 주소" />
                <DataGridTextColumn Binding="{Binding Version}" Header="버전" />
            </DataGrid.Columns>
        </DataGrid>

        <!--  영상 영역  -->
        <Border
    Grid.Row="0"
    Grid.Column="1"
    Margin="10"
    Background="Black"
    CornerRadius="4">
            <TextBlock
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        FontSize="24"
        Foreground="White"
        Text="영상 출력 영역" />
        </Border>

        <!--  제어 버튼  -->
        <StackPanel
    Grid.Row="1"
    Grid.Column="0"
    Margin="10"
    Orientation="Vertical">
            <WrapPanel Margin="0,0,0,10">
                <Button
            Width="120"
            Margin="5"
            Content="Ping 테스트" />
                <Button
            Width="120"
            Margin="5"
            Content="공장초기화" />
                <Button
            Width="120"
            Margin="5"
            Content="엑셀변환" />
                <Button
            Width="150"
            Margin="5"
            Content="Cam finder 실행" />
            </WrapPanel>
            <WrapPanel>
                <Button
            Width="120"
            Margin="5"
            Content="장비명 정렬" />
                <Button
            Width="120"
            Margin="5"
            Content="MAC 정렬" />
                <Button
            Width="120"
            Margin="5"
            Content="포트설정" />
                <Button
            Width="120"
            Margin="5"
            Content="통신속도" />
            </WrapPanel>
        </StackPanel>

        <!--  LPR UTIL 메뉴  -->
        <GroupBox
    Grid.Row="1"
    Grid.Column="1"
    Margin="10"
    Header="LPR UTIL 4.2 관련 메뉴창">
            <Grid>
                <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="16"
            Foreground="DarkSlateGray"
            Text="여기에 LPR 제어 및 설정 관련 버튼들을 구성합니다." />
            </Grid>
        </GroupBox>
    </Grid>
</Page>
