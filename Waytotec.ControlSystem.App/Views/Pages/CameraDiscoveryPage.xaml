<!--  Waytotec.ControlSystem.App/Views/Pages/CameraDiscoveryPage.xaml  -->
<Page
    x:Class="Waytotec.ControlSystem.App.Views.Pages.CameraDiscoveryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:Waytotec.ControlSystem.App.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Waytotec.ControlSystem.App.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="카메라 검색"
    d:DataContext="{d:DesignInstance local:CameraDiscoveryPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="600"
    d:DesignWidth="1000"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <!--  상태별 색상 컨버터  -->
        <conv:StatusToColorConverter x:Key="StatusToColorConverter" />

        <!--  불린 반전 컨버터  -->
        <conv:InverseBooleanConverter x:Key="InverseBooleanConverter" />
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  제목 및 상태  -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock
                    FontSize="24"
                    FontWeight="Bold"
                    Text="카메라 검색" />
                <TextBlock
                    Margin="0,5,0,0"
                    FontSize="14"
                    Text="{Binding StatusMessage}" />
            </StackPanel>

            <StackPanel
                Grid.Column="1"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center" Text="검색된 카메라: " />
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="{Binding DiscoveredCount}" />
                <TextBlock
                    Margin="2,0,10,0"
                    VerticalAlignment="Center"
                    Text="대" />
                <TextBlock VerticalAlignment="Center" Text="경과시간: " />
                <TextBlock
                    VerticalAlignment="Center"
                    FontWeight="Bold"
                    Text="{Binding ElapsedTime}" />
            </StackPanel>
        </Grid>

        <!--  검색 및 필터 컨트롤  -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  검색 버튼들  -->
            <WrapPanel Grid.Row="0" Margin="0,0,0,10">
                <ui:Button
                    Margin="0,0,10,0"
                    Command="{Binding ScanCommand}"
                    Content="전체 검색"
                    Icon="{ui:SymbolIcon Search24}"
                    IsEnabled="{Binding IsScanning, Converter={StaticResource InverseBooleanConverter}}" />

                <ui:Button
                    Margin="0,0,10,0"
                    Command="{Binding StartContinuousScanCommand}"
                    Content="실시간 검색 시작"
                    Icon="{ui:SymbolIcon Play24}"
                    IsEnabled="{Binding IsScanning, Converter={StaticResource InverseBooleanConverter}}" />

                <ui:Button
                    Margin="0,0,10,0"
                    Command="{Binding StopScanCommand}"
                    Content="검색 중지"
                    Icon="{ui:SymbolIcon Stop24}"
                    IsEnabled="{Binding IsScanning}" />

                <ui:Button
                    Margin="0,0,10,0"
                    Command="{Binding ScanRangeCommand}"
                    Content="대역 검색"
                    Icon="{ui:SymbolIcon Globe24}"
                    IsEnabled="{Binding IsScanning, Converter={StaticResource InverseBooleanConverter}}" />

                <ui:Button
                    Margin="0,0,10,0"
                    Command="{Binding RefreshSelectedCommand}"
                    Content="선택 새로고침"
                    Icon="{ui:SymbolIcon ArrowClockwise24}" />

                <ui:Button
                    Margin="0,0,10,0"
                    Command="{Binding ClearListCommand}"
                    Content="목록 지우기"
                    Icon="{ui:SymbolIcon Delete24}"
                    IsEnabled="{Binding IsScanning, Converter={StaticResource InverseBooleanConverter}}" />

                <ui:Button
                    Margin="0,0,10,0"
                    Command="{Binding ExportCommand}"
                    Content="파일로 내보내기"
                    Icon="{ui:SymbolIcon DocumentArrowDown24}" />
            </WrapPanel>

            <!--  필터 및 설정  -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  검색 필터  -->
                <StackPanel
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        Text="필터:" />
                    <ui:TextBox
                        Width="200"
                        Margin="0,0,10,0"
                        PlaceholderText="IP, MAC, 시리얼 검색..."
                        Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}" />

                    <CheckBox
                        Margin="0,0,10,0"
                        Content="온라인만"
                        IsChecked="{Binding ShowOnlineOnly}" />
                    <CheckBox Content="오프라인만" IsChecked="{Binding ShowOfflineOnly}" />
                </StackPanel>

                <!--  대역 검색 설정  -->
                <StackPanel
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        Text="대역:" />
                    <ui:TextBox
                        Width="120"
                        Margin="0,0,5,0"
                        Text="{Binding NetworkRange}" />
                    <TextBlock VerticalAlignment="Center" Text="/" />
                    <ui:NumberBox
                        Width="60"
                        Margin="5,0,0,0"
                        Maximum="30"
                        Minimum="8"
                        Value="{Binding NetworkMask}" />
                </StackPanel>
            </Grid>
        </Grid>

        <!--  진행률 표시  -->
        <!--<ui:Progress
            Grid.Row="2"
            Height="4"
            Margin="0,0,0,10"
            Visibility="{Binding ShowProgress, Converter={StaticResource BooleanToVisibilityConverter}}"
            Value="{Binding ScanProgress}" />-->
        <ui:ProgressRing
    Grid.Row="2"
    Height="4"
    Margin="0,0,0,10"
    Visibility="{Binding ShowProgress, Converter={StaticResource BooleanToVisibilityConverter}}"
    />
        
        <!--  카메라 목록  -->
        <DataGrid
            Name="CameraDataGrid"
            Grid.Row="2"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            CanUserReorderColumns="True"
            CanUserResizeColumns="True"
            CanUserSortColumns="True"
            GridLinesVisibility="Horizontal"
            HeadersVisibility="Column"
            IsReadOnly="True"
            ItemsSource="{Binding CamerasView}"
            SelectedItem="{Binding SelectedCamera}"
            SelectionMode="Single"
            SelectionUnit="FullRow">

            <DataGrid.Columns>
                <!--  상태 표시  -->
                <DataGridTemplateColumn
                    Width="60"
                    CanUserSort="True"
                    Header="상태"
                    SortMemberPath="Status">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Ellipse
                                Width="12"
                                Height="12"
                                Fill="{Binding Status, Converter={StaticResource StatusToColorConverter}}"
                                ToolTip="{Binding StatusText}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!--  IP 주소  -->
                <DataGridTextColumn
                    Width="120"
                    Binding="{Binding IpAddressString}"
                    CanUserSort="True"
                    Header="IP 주소" />

                <!--  MAC 주소  -->
                <DataGridTextColumn
                    Width="140"
                    Binding="{Binding FormattedMacAddress}"
                    CanUserSort="True"
                    Header="MAC 주소" />

                <!--  시리얼 번호  -->
                <DataGridTextColumn
                    Width="120"
                    Binding="{Binding SerialNumber}"
                    CanUserSort="True"
                    Header="시리얼 번호" />

                <!--  버전  -->
                <DataGridTextColumn
                    Width="120"
                    Binding="{Binding Version}"
                    CanUserSort="True"
                    Header="버전" />

                <!--  포트 정보  -->
                <DataGridTextColumn
                    Width="180"
                    Binding="{Binding PortInfo}"
                    CanUserSort="False"
                    Header="포트 정보" />

                <!--  마지막 확인  -->
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding LastSeenText}"
                    CanUserSort="True"
                    Header="마지막 확인"
                    SortMemberPath="LastSeen" />

                <!--  네트워크 정보  -->
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding NetworkInfo}"
                    CanUserSort="False"
                    Header="네트워크 정보" />
            </DataGrid.Columns>

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Status}" Value="Offline">
                            <Setter Property="Foreground" Value="Gray" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Status}" Value="Error">
                            <Setter Property="Foreground" Value="Red" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Command="{Binding RefreshSelectedCommand}" Header="새로고침" />
                    <Separator />
                    <MenuItem
                        Command="{Binding SortCommand}"
                        CommandParameter="IP주소"
                        Header="IP주소로 정렬" />
                    <MenuItem
                        Command="{Binding SortCommand}"
                        CommandParameter="MAC주소"
                        Header="MAC주소로 정렬" />
                    <MenuItem
                        Command="{Binding SortCommand}"
                        CommandParameter="상태"
                        Header="상태로 정렬" />
                    <Separator />
                    <MenuItem Click="CopyToClipboard_Click" Header="클립보드에 복사" />
                    <MenuItem Command="{Binding ExportCommand}" Header="파일로 내보내기" />
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>

        <!--  하단 상태바  -->
        <StatusBar Grid.Row="3" Margin="0,10,0,0">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}" />
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="총 " />
                    <TextBlock FontWeight="Bold" Text="{Binding DiscoveredCount}" />
                    <TextBlock Text="대 발견" />
                    <TextBlock Margin="10,0,0,0" Text=" | 선택: " />
                    <TextBlock Text="{Binding SelectedCamera.IpAddressString, FallbackValue='없음'}" />
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Page>