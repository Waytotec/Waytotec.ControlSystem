<Window x:Class="Waytotec.ControlSystem.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Waytotec.ControlSystem.App.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"        
        >
    <Grid>
        <ListView ItemsSource="{Binding Devices}" Margin="20">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding DeviceId}" />
                    <GridViewColumn Header="타입" DisplayMemberBinding="{Binding Type}" />
                    <GridViewColumn Header="상태" DisplayMemberBinding="{Binding StatusMessage}" />
                    <GridViewColumn Header="온라인" DisplayMemberBinding="{Binding IsOnline}" />
                    <GridViewColumn Header="업데이트" DisplayMemberBinding="{Binding LastUpdated}" />
                </GridView>
            </ListView.View>
        </ListView>

        <!--<TextBlock Text="{Binding Title}" HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontSize="24"/>-->
    </Grid>
</Window>
