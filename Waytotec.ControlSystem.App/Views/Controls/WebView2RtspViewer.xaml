<UserControl x:Class="Waytotec.ControlSystem.App.Views.Controls.WebView2RtspViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Waytotec.ControlSystem.App.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="MainGrid">
        <!-- 비디오 이미지 표시 영역 (WebView2로 대체됨) -->
        <Image x:Name="VideoImage" 
               Stretch="Uniform" 
               StretchDirection="Both"
               Visibility="Collapsed"/>

        <!-- 로딩 오버레이 -->
        <Border x:Name="LoadingOverlay" 
                Background="#80000000" 
                Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" 
                       VerticalAlignment="Center">
                <ProgressBar Width="100" Height="4" 
                           IsIndeterminate="True" 
                           Foreground="#4CAF50"/>
                <TextBlock x:Name="LoadingText" 
                          Text="연결 중..." 
                          Foreground="White" 
                          HorizontalAlignment="Center" 
                          Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- 상태 정보 오버레이 -->
        <StackPanel HorizontalAlignment="Right" 
                   VerticalAlignment="Bottom" 
                   Margin="10" 
                   Background="#80000000">
            <TextBlock x:Name="OverlayFps" 
                      Text="FPS: 0" 
                      Foreground="White" 
                      FontSize="11" 
                      Margin="5,2"/>
            <TextBlock x:Name="OverlayResolution" 
                      Text="해상도: -" 
                      Foreground="White" 
                      FontSize="11" 
                      Margin="5,2"/>
            <TextBlock x:Name="OverlayTime" 
                      Text="경과시간: 0초" 
                      Foreground="White" 
                      FontSize="11" 
                      Margin="5,2"/>
        </StackPanel>
    </Grid>
</UserControl>
