<UserControl
    x:Class="Waytotec.ControlSystem.App.Views.Controls.RtspVideoViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Waytotec.ControlSystem.App.Views.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="Auto"
    Height="Auto"
    mc:Ignorable="d">
    <Grid>
        <Image
            x:Name="VideoImage"
            Source="/Resources/NoCamera.png"
            Stretch="Uniform" />
        <StackPanel
            Margin="10"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">
            <TextBlock x:Name="OverlayFps" Style="{StaticResource WttTextSize14}" />
            <TextBlock x:Name="OverlayResolution" Style="{StaticResource WttTextSize14}" />
            <TextBlock x:Name="OverlayTime" Style="{StaticResource WttTextSize14}" />
        </StackPanel>
        <!--  로딩 인디케이터  -->
        <Border
            x:Name="LoadingOverlay"
            Width="100"
            Height="100"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="#80000000"
            CornerRadius="10"
            Visibility="Collapsed">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontWeight="Bold"
                Foreground="White"
                Text="로딩중..." />
        </Border>
    </Grid>
</UserControl>
